<UserControl x:Class="UI.Mantenimientos.UserControlLotes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Mantenimientos"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid  Background="#f3f8ff" HorizontalAlignment="Left" VerticalAlignment="Stretch">
        <Rectangle HorizontalAlignment="Left" Height="165" Margin="11,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="679"/>
        <Label x:Name="label1" Content="Lotes_Id" HorizontalAlignment="Left" Margin="40,45,0,0" VerticalAlignment="Top" Foreground="#1e7ff6" FontWeight="Bold" FontFamily="Tahoma"/>
        <TextBox x:Name="TextLotesId" TabIndex="0" materialDesign:HintAssist.Hint="codigo" Height="30" Margin="150,48,381,422" Text="{Binding SelectedItem.Id_Lotes, ElementName=dataGrid1, Mode=OneWay}" />
        <Label x:Name="label4" Content="Fecha_Caducidad" HorizontalAlignment="Left" Margin="355,45,0,0" VerticalAlignment="Top" Foreground="#1e7ff6" FontWeight="Bold" FontFamily="Tahoma"/>
        <TextBox x:Name="TextFechaCaducidad" TabIndex="1" materialDesign:HintAssist.Hint="FechaCaducidad" Height="30" Margin="494,48,76,422" Text="{Binding SelectedItem.Fecha_Caducidad, ElementName=dataGrid1, Mode=OneWay}" />
        <Label x:Name="label2" Content="Descripcion" HorizontalAlignment="Left" Margin="40,81,0,0" VerticalAlignment="Top" Foreground="#1e7ff6" FontWeight="Bold" FontFamily="Tahoma"/>
        <TextBox x:Name="TextDescripcion" TabIndex="2" materialDesign:HintAssist.Hint="Descripcion" Height="30" Margin="154,78,381,392" Text="{Binding SelectedItem.Descripcion, ElementName=dataGrid1, Mode=OneWay}" />
        <Label x:Name="label3" Content="Cantidad" HorizontalAlignment="Left" Margin="40,125,0,0" VerticalAlignment="Top" Foreground="#1e7ff6" FontWeight="Bold" FontFamily="Tahoma"/>
        <TextBox x:Name="TextCantidad" TabIndex="3" materialDesign:HintAssist.Hint="Cantidad" Height="30" Margin="154,118,381,352" Text="{Binding SelectedItem.Cantidad, ElementName=dataGrid1, Mode=OneWay}" />
        <Label x:Name="label5" Content="Fecha_Produccion" HorizontalAlignment="Left" Margin="355,81,0,0" VerticalAlignment="Top" Foreground="#1e7ff6" FontWeight="Bold" FontFamily="Tahoma"/>
        <TextBox x:Name="TextFechaProduccion" TabIndex="4" materialDesign:HintAssist.Hint="FechaProduccion" Height="30" Margin="496,78,55,392" Text="{Binding SelectedItem.Fecha_Produccion, ElementName=dataGrid1, Mode=OneWay}" />
        <Label x:Name="label6" Content="Productos_Id" HorizontalAlignment="Left" Margin="355,125,0,0" VerticalAlignment="Top" Foreground="#1e7ff6" FontWeight="Bold" FontFamily="Tahoma"/>
        <TextBox x:Name="TextProductos_Id" TabIndex="5" materialDesign:HintAssist.Hint="ProductosId" Height="30" Margin="492,118,55,352" Text="{Binding SelectedItem.Productos_Id, ElementName=dataGrid1, Mode=OneWay}" />
        <!--<Rectangle Fill="#c3ece9" HorizontalAlignment="Left" Height="55" Margin="17,187,0,0" Stroke="Black" VerticalAlignment="Top" Width="755"/>-->
        <Button x:Name="buttonAgregar" Background="#0000cc" Content="Agregar" HorizontalAlignment="Left" Margin="11,196,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.053,0" Height="35" Foreground="#FFFFFF" FontWeight="Bold" BorderBrush="#ffff00" Click="ButtonAgregar_Click"/>
        <Button x:Name="buttonGrabar" Background="#00b57d" Content="Grabar" HorizontalAlignment="Left" Margin="11,196,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.053,0" Height="35" Foreground="#FF0C0A0A" FontWeight="Bold" BorderBrush="#000000" Visibility="Hidden" Click="ButtonGrabar_Click"/>
        <Button x:Name="buttonEditar" Background="#f8f32b" Content="Editar" HorizontalAlignment="Left" Margin="180,196,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.053,0" Height="35" Foreground="Black" BorderBrush="#000000" IsEnabled="False" Click="ButtonEditar_Click"/>
        <Button x:Name="buttonListar" Background="#0097f8" Content="Listar" HorizontalAlignment="Left" Margin="355,196,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.003,0" Height="35" Foreground="#000000" BorderBrush="#000000" Click="ButtonListar_Click"/>
        <Button x:Name="buttonCancelar" Background="#ff2301" Content="Cancelar" HorizontalAlignment="Left" Margin="530,196,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.003,0" Height="35" Foreground="#000000" BorderBrush="#000000" IsEnabled= "False" Click="ButtonCancelar_Click"/>
        <DataGrid x:Name="dataGrid1" ItemsSource="{Binding estadocontratoCollection}" Background="#fff5ee" HorizontalAlignment="Left" Height="211" Margin="11,264,0,0" VerticalAlignment="Top" Width="669" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
